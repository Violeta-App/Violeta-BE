generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       String  @id @default(uuid())
  user_name     String
  user_login    String  @unique
  user_password String
  occurrences   Occurrence[]

  @@map("users")
}

model Occurrence {
  occurrence_id     String  @id @default(uuid())
  occurrence_description String
  address          String
  region           String
  state            String
  city             String
  latitude         Float
  longitude        Float
  date             String
  time             String
  main_reason      String
  victim_situation String
  anonymous        Boolean
  victim_name      String
  occurrence_score  Int
  user_id          String  @default("00000000-0000-0000-0000-000000000000")
  user            User?  @relation(fields: [user_id], references: [user_id])

  @@map("occurrences")
}

model Alerta {
  alerta_id String   @id @default(uuid())
  titulo String      @default("")
  descricao String
  imagem String      @default("")
  tipo String        @default("")
  latitude  Float
  longitude Float
  upvotes   Int      @default(0)
  downvotes Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("alertas")
}

model LocalSeguro {
  id        String   @id @default(uuid())
  name      String
  tipo      String?
  address   String   @default("")
  rating   Float   @default(0)
  sunday   String   @default("")
  monday   String   @default("")
  tuesday   String   @default("")
  wednesday   String   @default("")
  thursday   String   @default("")
  friday   String   @default("")
  saturday   String   @default("")
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("locais_seguros")
}