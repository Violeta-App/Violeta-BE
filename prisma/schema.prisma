generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ocurrence {
  ocurrence_id     String @id @default(uuid())
  ocurrence_description String
  address          String
  region           String
  state            String
  city             String
  latitude         Float
  longitude        Float
  date             String
  time             String
  main_reason      String
  victim_situation String
  anonymous        Boolean
  victim_name      String
  ocurrence_score  Int

  @@map("ocurrences")
}
