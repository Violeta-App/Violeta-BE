{
  "openapi": "3.0.4",
  "info": {
    "title": "Violeta App BE",
    "description": "Documentação da API do backend do Aplicativo Violeta",
    "version": "0.1.1"
  },
  "servers": [
    {
      "url": "http://localhost:8989/",
      "description": "Server local"
    }
  ],
  "paths": {
    "/occurrences": {
      "get": {
        "tags": ["Occurrences"],
        "summary": "Retorna todas as ocorrências.",
        "responses": {
          "200": {
            "description": "Array JSON com todas as ocorrências.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Occurrence"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Occurrences"],
        "summary": "Cria novas ocorrências.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OccurrenceWithoutId"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ocorrências criadas com sucesso."
          },
          "400": {
            "description": "Requisição inválida."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      }
    },
    "/occurrences/{occurrence_id}": {
      "get": {
        "tags": ["Occurrences"],
        "summary": "Retorna uma ocorrência pelo ID.",
        "parameters": [
          {
            "name": "occurrence_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dados da ocorrência.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Occurrence"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Occurrences"],
        "summary": "Atualiza uma ocorrência pelo ID.",
        "parameters": [
          {
            "name": "occurrence_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Occurrence"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ocorrência atualizada."
          }
        }
      },
      "delete": {
        "tags": ["Occurrences"],
        "summary": "Deleta uma ocorrência pelo ID.",
        "parameters": [
          {
            "name": "occurrence_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ocorrência deletada com sucesso."
          }
        }
      }
    },
    "/occurrences/{user_id}": {
      "get": {
        "tags": ["Occurrences"],
        "summary": "Retorna a(s) ocorrência(s) dado um user_id.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
